<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/arrows"
            android:layout_margin="10dp"
            android:id="@+id/imgCommentBack" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/symbol"
            android:layout_alignTop="@+id/imgCommentBack"
            android:layout_toRightOf="@+id/imgCommentBack"
            android:layout_toEndOf="@+id/imgCommentBack"
            android:layout_marginLeft="88dp"
            android:layout_marginStart="88dp"
            android:id="@+id/imgComment" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate and comment"
            android:layout_below="@+id/imgCommentBack"
            android:layout_toRightOf="@+id/imgCommentBack"
            android:layout_toEndOf="@+id/imgCommentBack"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/report"
            android:layout_marginRight="49dp"
            android:layout_marginEnd="49dp"
            android:id="@+id/iv_report"
            android:layout_alignTop="@+id/imgComment"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:layout_below="@+id/imgCommentBack"
            android:layout_alignLeft="@+id/iv_report"
            android:layout_alignStart="@+id/iv_report"
            android:id="@+id/tv_report" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="5dp"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 reviews"
            android:textSize="20sp"
            android:id="@+id/tv_comment_review"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/tv_comment_review"
            android:layout_centerHorizontal="true"
            android:theme="@style/RatingBar"/>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"/>


</LinearLayout>